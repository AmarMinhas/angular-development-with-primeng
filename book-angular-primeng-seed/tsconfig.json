{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "outDir": "dist",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "types": [
    "node"
  ],
  "files": [
    "node_modules/@types/node/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "config",
    "dist",
    "test"
  ],
  "angularCompilerOptions": {
    "genDir": "./src/ngfactory"
  }
}